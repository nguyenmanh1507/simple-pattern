									input(type="submit", class="btn", value="Sign In")

								p: em required fields 
									span(class="required")  *

					.col-4
						form(action="")
							fieldset
								legend Sign-up Form

								.field-group
									label(for="sign-up-email") Email address:
										span(class="required")  *
									input(type="email", id="sign-up-email", name="sign-up-email")

								.field-group
									label(for="sign-up-pwd") Password:
										span(class="required")  *
									input(type="password", id="sign-up-pwd", name="sign-up-pwd")

								.field-group
									label(for="sign-up-confirm-pwd") Confirm Password:
										span(class="required")  *
									input(type="password", id="sign-up-confirm-pwd", name="sign-up-confirm-pwd")

								.field-group
									input(type="submit", class="btn", value="Sign Up")

								p: em required fields 
									span(class="required")  *

					.col-4
