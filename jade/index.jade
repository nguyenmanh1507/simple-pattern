		//- Forms
		section
			.container
				h1 Forms
				hr

				form(action="")
					.row
						.col-half
							
							fieldset
								legend Inputs

								.field-group

									label(for="demo-input-1") This is a label
									input(type="text", id="demo-input-1", placeholder="This is a text input")

									p(class="help") This is a contextual help for the field above.

								.field-group.field-error

									label(for="demo-input-2") Error field
									input(type="text", id="demo-input-2", placeholder="This is a text input")

									p(class="help") This is a error message help for the field above.

								.field-group

									label(for="demo-textarea") This is a label
									textarea(type="text", id="demo-textarea", cols="30", rows="10", placeholder="This is textarea")

						.col-half

							fieldset
								legend Radio buttons and checkboxes

								.field-group
									input(type="radio", name="demo-radio", id="demo-radio-1")
